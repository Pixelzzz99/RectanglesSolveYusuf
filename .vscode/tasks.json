{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\Program Files\\mingw64\\bin\\g++.exe",
			"args": [
				"-I", 
				"${workspaceFolder}\\Headers",
				"-g",
				"${workspaceFolder}\\Files\\*.cpp",
				"-o",
				"${workspaceFolder}\\bin\\main.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}